<div class="home-wrapper">
	<div class="pure-g">
		<div class="l-box pure-u-2 pure-u-md-1-4 pure-u-lg-1-6"></div>

		<div class="l-box pure-u-2 pure-u-md-1-3 pure-u-lg-1-4">
			<div name="user_search">
				<h3>Users:</h3>
				<ul class="pure-menu-list">
					{{#each users}}
						<li class="pure-menu-item">
							<a href="http://localhost:1234/@/{{this.username}}" class="pure-menu-heading">{{this.username}}</a>
						</li>
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="l-box pure-u-2 pure-u-md-1-3 pure-u-lg-1-4">
			<div name="playlist_search">
				<h3>Playlists:</h3>
				<ul class="pure-menu-list">
					{{#each playlists}}
						<li class="pure-menu-item">
							<a href="http://localhost:1234/playlist/{{this.id}}" class="pure-menu-heading">{{this.name}}</a>
						</li>
					{{/each}}
				</ul>
			</div>
		</div>

		<div class="l-box pure-u-2 pure-u-md-1-3 pure-u-lg-1-4">
			<div name="user_search">
				<h3>Songs:</h3>
				<ul class="pure-menu-list">
					{{#each songs}}
						<li class="pure-menu-item">
							<a href="http://localhost:1234/song/{{this.id}}" class="pure-menu-heading">{{this.title.value}}</a>
						</li>
					{{/each}}
				</ul>
			</div>
		</div>

	</div>
</div>

