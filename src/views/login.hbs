<div class="home-wrapper">

		{{#if errorMsg}}
			<div class="pure-g">
				<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-3"></div>
				<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-4">
					<div class="error-login">
						{{errorMsg}}
					</div>
				</div>
			</div>
		{{/if}}

	<div class="pure-g">
		<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-4"></div>
		<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-3">
			<h3>Login</h3>
			<form action="v1/auth/login" method="POST" class="pure-form pure-form-stacked">
				<label for="login-usern">Username</label>
				<input name="username" id="login-usern" type="text" required pattern=".{7,32}" placeholder="Username">

				<label for="login-psswd">Password</label>
				<input name="password" id="login-psswd" type="password" required pattern="^(?=.*[0-9A-Za-z])(?=.*\d)[0-9A-Za-z\d]{12,}$" placeholder="Password">

				<input type="submit" class="pure-button pure-button-primary login-button">
			</form>
		</div>

		<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-3">
			{{#if errorRegister}}
					<div class="error-login">
						{{errorRegister}}
					</div>
			{{/if}}
			<h3>Register</h3>
			<span class="pure-form-message">All fields are required.</span>
			<form action="v1/auth/register" method="POST" class="pure-form pure-form-stacked">
				<label for="login-email">Email</label>
				<input name="email" id="login-email" type="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}"  placeholder="Email">

				<label for="login-email">Username</label>
				<input name="username" type="text" required pattern=".{7,32}" placeholder="Username">
				<span class="pure-form-message">Between 7 and 32 characters.</span>

				<label for="login-email">Password</label>
				<input name="password" type="password" required pattern="^(?=.*[0-9A-Za-z])(?=.*\d)[0-9A-Za-z\d]{12,}$" placeholder="Password">
				<span class="pure-form-message">A minimum of 12 characters,</span>
				<span class="pure-form-message">with at least 1 uppercase, 1 lowercase and 1 number.</span>

				<input type="submit" class="pure-button pure-button-primary login-button">
			</form>
		</div>

	</div>
</div>


