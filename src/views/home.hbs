<div class="home-wrapper">
	<div class="pure-g">

		<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-3">
			playlists
			<ul>
			{{#each playlists}}
				<li>
					<a href="http://localhost:1234/playlist/{{this.id}}">{{this.name}}</a>
				</li>
			{{/each}}
			</ul>
		</div>

		<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-3">
			<div name="new-playlist">
				<form action="playlist/new" method="POST">
					New playlist name:
					<input type="text" name="name" required>
					<input type="submit" value="Create">
				</form>
			</div>
		</div>

		<div class="l-box pure-u-2 pure-u-md-1-2 pure-u-lg-1-3">
			<div name="search-playlist">
				<form action="search" method="GET">
					Search for a playlist (or a creator):
					<input type="text" name="search" required>
					<input type="submit" value="Search">
				</form>
			</div>
		</div>

	</div>
</div>